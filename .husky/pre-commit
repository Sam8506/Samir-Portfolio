echo "ğŸ” Running TypeScript check..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed!"
  exit 1
fi

# Step 2: Lint check
echo "ğŸ§¹ Running linter..."
npx eslint . --ext .js,.ts,.jsx,.tsx
if [ $? -ne 0 ]; then
  echo "âŒ Lint errors found!"
